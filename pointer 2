#include <stdio.h>
#include <stdlib.h>
int main()
{
  int*a;
  int n,i;
  printf("enter the no of elements \n");
  scanf("%d", &n);
  a = (int *)malloc(n * sizeof(int));
  printf("enter the numbers \n");
  for(i=0;i<n;i++)
  scanf("%d",&a[i]);
  {
      for (i = 0; i < n; i++)
      printf("value of a[%d]= %d\n\n",i,a[i]);
      
  }
  return 0;

}
